{
  "name": "xor4",
  "private": true,
  "version": "0.0.0",
  "description": "run a broken system manually while defending it against impossible odds",
  "main": "./app/src/script.ts",
  "workspaces": [
    "app",
    "desktop",
    "game",
    "www"
  ],
  "alias": {
    "xor4-app": "./app",
    "xor4-game": "./game",
    "xor4-www": "./www"
  },
  "scripts": {
    "test": "run-s lint tests:* && echo 'All tests ran successfully'",
    "tests:game": "cd game && npm run test"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "app": "dist/index.html",
  "contributes": {
    "languages": [{
      "id": "kqj",
      "extensions": [".kqj"],
      "aliases": ["Kernel Quest Joy", "kqj"],
      "configuration": "./extension/language-configuration.json"
    }],
    "grammars": [{
      "language": "kqj",
      "scopeName": "source.kqj",
      "path": "./extension/syntaxes/kqj.tmLanguage.json"
    }]
  },
  "targets": {
    "app": {
      "source": [
        "app/src/index.html"
      ]
    },
    "game": {
      "source": [
        "game/src/index.ts"
      ]
    }
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/node": "^17.0.6",
    "@typescript-eslint/eslint-plugin": "^5.8.1",
    "@typescript-eslint/parser": "^5.8.1",
    "dependency-cruiser": "^11.4.1",
    "eslint": "^8.6.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.22.1",
    "nodemon": "^2.0.15",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.22.15",
    "typescript": "^4.5.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xorxyz/xor4.git"
  },
  "author": "Jonathan Dupr√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xorxyz/xor4/issues"
  },
  "homepage": "https://github.com/xorxyz/xor4#readme"
}