{
  "name": "xor4",
  "private": true,
  "version": "0.0.0",
  "description": "run a broken system manually while defending it against impossible odds",
  "main": "./app/src/script.ts",
  "workspaces": [
    "app",
    "desktop",
    "game",
    "www"
  ],
  "alias": {
    "xor4-app": "./app",
    "xor4-game": "./game",
    "xor4-www": "./www"
  },
  "scripts": {
    "test": "run-s lint tests:* && echo 'All tests ran successfully'",
    "tests:game": "cd game && npm run test"
  },
  "browserslist": "> 0.5%, last 2 versions, not dead",
  "app": "dist/index.html",
  "targets": {
    "app": {
      "source": [
        "app/src/index.html"
      ]
    },
    "game": {
      "source": [
        "game/src/index.ts"
      ]
    }
  },
  "devDependencies": {
    "@types/events": "^3.0.0",
    "@types/node": "^17.0.45",
    "@typescript-eslint/eslint-plugin": "^5.59.2",
    "@typescript-eslint/parser": "^5.59.2",
    "dependency-cruiser": "^11.18.0",
    "eslint": "^8.39.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.27.5",
    "nodemon": "^2.0.22",
    "npm-run-all": "^4.1.5",
    "typedoc": "^0.22.18",
    "typescript": "^4.7.4"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/xorxyz/xor4.git"
  },
  "author": "Jonathan Dupr√©",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/xorxyz/xor4/issues"
  },
  "homepage": "https://github.com/xorxyz/xor4#readme"
}
