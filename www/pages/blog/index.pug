extends /templates/layouts/layout.pug

block body
  section.home-hero.bg-dark-purple.white.flex.items-center.justify-center.ph3.flex-column
    .container.tc.flex.flex-column.justify-center.items-center.h-100.pv4
      h2.lh-title.f2.f1-ns.mt0.mv1
        | Blog

  section.home-hero.bg-white.black.flex.items-center.ph3.flex-column
    .container.pv4
      h2 Most recent posts

      div
        table
          tbody
          - routes.blog.sort((a,b) => new Date(b.date) - new Date(a.date))
            each post in routes.blog
              tr.lh-copy
                td.w4(style="vertical-align:top;") #{ post.date } &nbsp;
                td(style="vertical-align:top;")  
                  a.link(href='/blog/' + post.slug)
                    |#{ post.title }
