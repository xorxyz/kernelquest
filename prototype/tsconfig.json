{
  "compilerOptions": {
    "isolatedModules": true,
    "noEmit": false,
    "outDir": "build",
    "target":"es2018",
    "module": "es6",
    "lib": [
			"es2018",
      "dom"
		],
    "declaration": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization":false,
    "typeRoots": [
      "./node_modules/@types"
		]
  },
	"include": [
    "components/*.ts",
    "lib/*.ts",
    "editor.ts"
	],
	"exclude": [
    "build"
	]
}
