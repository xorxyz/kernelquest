{
  "name": "kqj-language",
  "description": "A language server example",
  "author": "Jonathan Dupr√©",
  "license": "UNLICENSED",
  "version": "0.0.0",
  "engines": {
    "vscode": "^1.74.0"
  },
  "main": "./client/out/extension",
  "contributes": {
    "languages": [{
      "id": "kqj",
      "extensions": [".kqj"],
      "aliases": ["Kernel Quest Joy", "kqj"],
      "configuration": "./language-configuration.json"
    }],
    "grammars": [{
      "language": "kqj",
      "scopeName": "source.kqj",
      "path": "./syntaxes/kqj.tmLanguage.json"
    }],
    "configuration": {
      "type": "object",
      "title": "Kernel Quest Joy Configuration",
      "properties": {
        "kqj.maxNumberOfProblems": {
          "scope": "resource",
          "type": "number",
          "default": 100,
          "description": "Controls the maximum number of problems produced by the server."
        },
        "kqj.trace.server": {
          "scope": "window",
          "type": "string",
          "enum": [
            "off",
            "messages",
            "verbose"
          ],
          "default": "off",
          "description": "Traces the communication between VS Code and the language server."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -b",
    "watch": "tsc -b -w",
    "lint": "eslint ./client/src ./server/src --ext .ts,.tsx",
    "postinstall": "cd client && npm install && cd ../server && npm install && cd ..",
    "test": "sh ./scripts/e2e.sh"
  },
  "devDependencies": {
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.11.7",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "@typescript-eslint/parser": "^5.42.0",
    "eslint": "^8.26.0",
    "mocha": "^9.2.1",
    "typescript": "^4.9.4"
  }
}
